# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_PATH=./data/checkup.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=CheckUp <your-email@gmail.com>

# Gotify Configuration (Optional)
GOTIFY_URL=http://localhost:8080
GOTIFY_TOKEN=your-gotify-app-token

# Webhook Configuration (Optional)
WEBHOOK_URL=https://your-webhook-url.com/webhook
WEBHOOK_SECRET=your-webhook-secret

# Monitoring Configuration
MONITORING_INTERVAL=300000
METRICS_RETENTION_DAYS=30
UPDATE_CHECK_INTERVAL=3600000

# Proxmox Configuration (Optional)
PROXMOX_HOST=
PROXMOX_USER=
PROXMOX_PASSWORD=
PROXMOX_TOKEN_ID=
PROXMOX_TOKEN_SECRET=

# Docker Configuration (Optional)
DOCKER_HOST=unix:///var/run/docker.sock

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/checkup.log